<%- include('./includes/header.ejs') %>
  <script defer type="module" src="components/business/login/login.component.js"></script>
  <link rel="stylesheet" href="css/login.css">
  </head>

  <body>
    <div class="main">
      <div class="left-side"></div>
      <div class="right-side">
        <div class="card login-card-size">
          <div class="title">
            Pipatec - Módulo financeiro
          </div>
          <div class="subtitle">Faça o seu login</div>
          <div class="body">
            <div class="form-group">
              <label for="loginInput" class="label">Login:</label>
              <input type="input" class="form-control" id="loginInput">
            </div>
            <div class="form-group">
              <label for="passwordInput" class="label">Senha:</label>
              <input type="password" class="form-control" id="passwordInput" aria-describedby="passwordRecovery">
              <div id="passwordHelpBlock" class="form-text">
                <a href="#">Recuperar a senha</a>
              </div>
              <div id="alertLogin" class="alert alert-danger hidden my-2" role="alert">
                <div id="messageLogin"></div>
                <div id="closeAlertLogin" class="icon icon-close icon-24 icon-danger icon-click pointer"></div>
              </div>
              <div class="flex-row-container-reverse">
                <button id="btnLogin" type="button"
                  class="btn btn-font-white btn-round btn-primary pointer">Entrar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

  </html>